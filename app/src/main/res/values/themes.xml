<resources>
    <!-- Base application theme. -->
    <style name="Theme.MyAnimeList" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorSecondary</item>
        <item name="colorSecondary">@color/colorTertiary</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="Theme.MyAnimeList.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <style name="ExpandedTitleText" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="maxLines">2</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <style name="Theme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />
</resources>